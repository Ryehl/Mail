<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_myfoot_sdv"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/item_myfoot_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/item_myfoot_sdv"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/item_myfoot_price"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/item_myfoot_name"
        android:gravity="center_vertical"
        android:textColor="#F00" />

    <TextView
        android:id="@+id/item_myfoot_count"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/item_myfoot_name"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/item_myfoot_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/item_myfoot_count"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical" />

</RelativeLayout>