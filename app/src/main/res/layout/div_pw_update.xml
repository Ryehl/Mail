<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF333333">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/div_update_pw_tv_info"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="#FFF"
            android:gravity="center"
            android:text="发现新版本，立即更新" />

        <TextView
            android:id="@+id/div_update_pw_tv_fgx"
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:layout_below="@+id/div_update_pw_tv_info"
            android:background="#CCC" />

        <TextView
            android:id="@+id/div_update_pw_tv_ok"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/div_update_pw_tv_fgx"
            android:background="#FFF"
            android:gravity="center"
            android:text="确定"
            android:textColor="#00F" />
    </RelativeLayout>

</RelativeLayout>