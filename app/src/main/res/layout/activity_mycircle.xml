<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:fitsSystemWindows="true"
    tools:context="com.xaoyv.small.activity.MycircleActivity">

    <ImageView
        android:id="@+id/mycircle_img_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="23sp"
        android:gravity="center"
        android:text="@string/tv_mycircle"
        />

    <ImageView
        android:id="@+id/mycircle_img_del"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/delete"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mycircle_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mycircle_img_back"
        />

</RelativeLayout>
