<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.xaoyv.small.activity.WalletActivity">

    <ImageView
        android:id="@+id/wallet_img_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/tv_wallet"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/wallet_tv_wallet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/wallet_img_back"
        android:background="@drawable/wallet_background"
        android:gravity="center"
        android:textSize="80sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wallet_img_back"
        android:layout_margin="30dp"
        android:text="余额"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_margin="2dp"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wallet_tv_wallet"
        android:id="@+id/wallet_ll"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="消费金额"
            android:textSize="20sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCC" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="消费时间"
            android:textSize="20sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/wallet_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wallet_ll"
        />

</RelativeLayout>
