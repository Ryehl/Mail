<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--待评价-->
    <LinearLayout
        android:id="@+id/item_order_comment_ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_order_comment_orderCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/item_order_comment_sandian"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sandian" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_order_comment_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_order_comment_ll_top" />

    <Button
        android:id="@+id/item_order_comment_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_order_comment_recy"
        android:layout_alignParentEnd="true"
        android:text="@string/btn_order_tocommon" />

</RelativeLayout>